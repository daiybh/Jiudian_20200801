<UserControl x:Class="Jiudian.leftButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jiudian"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="info">有效录入时间:30分钟</Button>
        <Button Grid.Row="1" x:Name="addBtn">添加</Button>
        <Button Grid.Row="2" x:Name="modBtn">修改</Button>
        <Button Grid.Row="3" x:Name="delBtn">删除</Button>
    </Grid>
</UserControl>
